{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "bn.js"],

    "rootDir": ".",
    "outDir": "dist",

    "sourceMap": true
  },
  "include": ["**/*.ts", "**/*.svelte"],
  "exclude": ["node_modules", "dist"]
}
